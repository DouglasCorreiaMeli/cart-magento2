<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="custom_checkout_webpay" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Custom Checkout - Debit Card (Webpay/Redcompra)</label>

        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/mercadopago_custom_webpay/active</config_path>
        </field>

        <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Payment Title</label>
            <config_path>payment/mercadopago_custom_webpay/title</config_path>
        </field>

        <field id="banner_checkout" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Banner Checkout</label>
            <config_path>payment/mercadopago_custom_webpay/banner_checkout</config_path>
            <comment>Add the URL of an image that you want to insert in the checkout.</comment>
        </field>

        <field id="sort_order" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Checkout Position</label>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/mercadopago_custom_webpay/sort_order</config_path>
            <comment>This setting will be the position in which the payment method will be available to the buyer.</comment>
        </field>
    </group>
</include>
