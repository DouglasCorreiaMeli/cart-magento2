{
    "name": "mercadopago/magento2-plugin",
    "description": "Mercado Pago Magento 2 Plugin",
    "authors": [
        {
            "name": "Mercado Pago",
            "email": "plugins.dev@mercadopago.com"
        }
    ],
    "type": "magento2-module",
    "version": "3.9.1",
    "license": [
        "OSL-3.0",
        "AFL-3.0"
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "require": {
        "ext-json": "*"
    },
    "require-dev": {
        "magento/framework": ">=101.0.0",
        "magento/magento2-functional-testing-framework": "3.5.1"
    },
    "autoload": {
        "psr-4": {
            "MercadoPago\\Core\\": "src/MercadoPago/Core"
        },
        "files": [
            "src/MercadoPago/Core/registration.php"
        ]
    },
    "scripts": {
        "test-mtft": "mftf build:project && mftf run:test DeprecatedDevDocsTest -f && mftf run:test DevDocsTest -f && mftf run:test FormatCurrencyTest -f"
    }
}
